<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@android:drawable/ic_menu_revert"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/roundText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kast: 0/3"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Round Dots Layout -->
    <LinearLayout
        android:id="@+id/roundDotsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/roundText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Round 1 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="8dp">
            <ImageView
                android:id="@+id/roundDot1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/dot_empty" />
            <TextView
                android:id="@+id/roundLabel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#333" />
        </LinearLayout>

        <!-- Round 2 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="8dp">
            <ImageView
                android:id="@+id/roundDot2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/dot_empty" />
            <TextView
                android:id="@+id/roundLabel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#333" />
        </LinearLayout>

        <!-- Round 3 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="8dp">
            <ImageView
                android:id="@+id/roundDot3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/dot_empty" />
            <TextView
                android:id="@+id/roundLabel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#333" />
        </LinearLayout>

        <!-- Round 4 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="8dp">
            <ImageView
                android:id="@+id/roundDot4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/dot_empty" />
            <TextView
                android:id="@+id/roundLabel4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#333" />
        </LinearLayout>

        <!-- Round 5 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="8dp">
            <ImageView
                android:id="@+id/roundDot5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/dot_empty" />
            <TextView
                android:id="@+id/roundLabel5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#333" />
        </LinearLayout>

        <!-- Round 6 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="8dp">
            <ImageView
                android:id="@+id/roundDot6"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/dot_empty" />
            <TextView
                android:id="@+id/roundLabel6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#333" />
        </LinearLayout>

        <!-- Round 7 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="8dp">
            <ImageView
                android:id="@+id/roundDot7"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/dot_empty" />
            <TextView
                android:id="@+id/roundLabel7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#333" />
        </LinearLayout>

        <!-- Round 8 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="8dp">
            <ImageView
                android:id="@+id/roundDot8"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/dot_empty" />
            <TextView
                android:id="@+id/roundLabel8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#333" />
        </LinearLayout>

        <!-- Round 9 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="8dp">
            <ImageView
                android:id="@+id/roundDot9"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/dot_empty" />
            <TextView
                android:id="@+id/roundLabel9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#333" />
        </LinearLayout>

        <!-- Round 10 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/roundDot10"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/dot_empty" />
            <TextView
                android:id="@+id/roundLabel10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#333" />
        </LinearLayout>

    </LinearLayout>

    <!-- Dice Layout -->
    <LinearLayout
        android:id="@+id/diceRows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/roundDotsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- First row of dice -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/dice1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/white1"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <ImageView
                android:id="@+id/dice2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/white2"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <ImageView
                android:id="@+id/dice3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/white3"
                android:background="?attr/selectableItemBackgroundBorderless" />

        </LinearLayout>

        <!-- Second row of dice -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dice4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/white4"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <ImageView
                android:id="@+id/dice5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/white5"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <ImageView
                android:id="@+id/dice6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/white6"
                android:background="?attr/selectableItemBackgroundBorderless" />

        </LinearLayout>

    </LinearLayout>

    <!-- Control Buttons -->

    <Button
        android:id="@+id/rollButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#4CAF50"
        android:text="Kasta Tärningar"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:elevation="4dp"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/diceRows" />

    <TextView
        android:id="@+id/scoreLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Välj poängkategori:"
        android:textSize="16sp"
        android:textColor="#333"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/rollButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Spinner
        android:id="@+id/scoreSpinner"
        android:layout_width="130dp"
        android:layout_height="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scoreLabel" />

    <Button
        android:id="@+id/confirmScoreButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bekräfta Poäng"
        android:textSize="14sp"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:elevation="4dp"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/scoreSpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#333"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/confirmScoreButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>